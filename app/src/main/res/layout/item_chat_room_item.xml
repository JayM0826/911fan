<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_room_cover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/room_cover_37" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/room_name"
                android:textSize="@dimen/sp_24" />

            <View
                android:id="@+id/room_divider_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/tv_room_name"
                android:layout_margin="2dp"
                android:background="@color/color_yellow_796413" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_divider_line"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_room_owner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/nim_team_owner_icon"
                    android:text="@string/room_owner"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_room_online_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/room_online_number"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/color_yellow_796413" />
</LinearLayout>
