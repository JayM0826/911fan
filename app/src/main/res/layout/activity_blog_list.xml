<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imfan.j.a91fan.textabout.BlogListActivity">



    <com.imfan.j.a91fan.textabout.ScrollRecyclerView
        android:id="@+id/list_blog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <EditText
        android:background="@color/material_deep_teal_20"
        android:id="@+id/new_blog"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_blog"
        android:textSize="@dimen/text_size_24"/>

</RelativeLayout>
